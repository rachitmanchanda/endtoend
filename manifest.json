{
  "name": "Screenshot and Inspect",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Take Screenshot and Inspect"
  },
  "web_accessible_resources": [{
    "resources": ["img/logo.png"],
    "matches": ["<all_urls>"]
  }]
}